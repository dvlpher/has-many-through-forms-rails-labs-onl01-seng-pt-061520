<%= render 'form', post: Post.new %>

<div class=post-content>
<%= @post.content %>
</div>

<%= form_for post do |p| %>
<%= p.label "Title" %>
<%= p.text_field :title %>
<%= p.label "Content" %>
<%= p.text_area :content %>
<%= p.collection_check_boxes :category_ids, Category.all, :id, :name %>
<%= p.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
<% end %>
<%= p.submit %>
<% end %>